public class NumberAndMath {
    public static void main(String[] args) {
        // prints message
        System.out.println("I will now count my chickens:");

        // calculates and prints number of hens
        System.out.println("Hens " + (25.0 + 30.0 / 6.0));

        // calculates and prints number of roosters
        System.out.println("Roosters " + (100.0 - 25.0 * 3.0 % 4.0));

        // prints message
        System.out.println("Now I will count the eggs:");

        // calculates and prints number of eggs
        System.out.println(3.0 + 2.0 + 1.0 - 5.0 + 4.0 % 2.0 - 1.0 / 4.0 + 6.0);

        // prints message
        System.out.println("Is it true that 3 + 2 < 5 - 7?");

        // checks if boolean statement is true or false
        System.out.println(3.0 + 2.0 < 5.0 - 7.0);

        // calculates sum and prints message
        System.out.println("What is 3 + 2? " + (3.0 + 2.0));

        // calculates sum and prints message
        System.out.println("What is 5 - 7? " + (5.0 - 7.0));

        // prints message
        System.out.println("Oh, that's why it's false.");

        // prints message
        System.out.println("How about some more.");

        // prints message and checks if boolean statement is true or false
        System.out.println("Is it greater? " + (5.0 > -2.0));

        // prints message and checks if boolean statement is true or false
        System.out.println("Is it greater or equal? " + (5.0 >= -2.0));

        // prints message and checks if boolean statement is true or false
        System.out.println("Is it less or equal? " + (5.0 <= -2.0));
    }
}
